<UserControl x:Class="PointOfSale.OrderSummaryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Name ="OrderNumber" Height =" 35"/>
            <RowDefinition/>
            <RowDefinition Height=" 35"/>

        </Grid.RowDefinitions>
        <TextBox  Name ="OrderList" Grid.Row=" 1" Grid.Column="0" Text="{Binding Items}"/>
        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Path=OrderNumber}"/>
        <TextBox Name ="Subtotal" Grid.Row="2" Grid.Column="1" Text="{Binding Path=Subtotal, StringFormat=c}"/>
        <TextBlock Grid.Row="10" Grid.Column="0" Text="Subtotal:" FontSize=" 18"/>
        

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=" 300"/>
            <ColumnDefinition Width=" 100"/>
           
            
        </Grid.ColumnDefinitions>
        


    </Grid>
</UserControl>
